#include <stdio.h>
#include <stdlib.h>

int main()
{
   int i,j,l=1,t,n;
   scanf("%d\n",&t);
   for(i=1;i<=t;i++)
   {
       scanf("%d",&n);
       for(j=1;j<=n;j++)
       {
           if(j%2!=0)
            l=l*2;
           else
            l=l+1;
       }
       printf("%d\n",l);
       l=1;
   }
}
